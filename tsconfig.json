{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__",
    "**/__mocks__"
  ]
}
